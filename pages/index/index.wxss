/**index.wxss**/
page{height:100%;}
.slide-image{width:100%;height:100%;}
/* 附近商家 */
.sell{background: #fff;width:100%;padding:23rpx 0;text-align: center;border-top:25rpx solid #f5f5f5;}
.sell .sell_box{font-size:28rpx;}
.sell .sell_box text{display: inline-block;}
.sell .sell_box text.lLine{width:100rpx;height:2rpx;background: #000;position: relative;top:-3px;}
.sell .sell_box text.rLine{width:100rpx;height:2rpx;background: #000;position: relative;top:-3px;}
.sell .sell_box text.text{margin:0 25rpx;}
/* 商家列表 */
.shopList{background: #f5f5f5;width:86%;margin:0 3%;padding:20rpx 4%;box-shadow: 0px 0px 0px 1px #f5f5f5;border-radius: 10rpx;font-size:28rpx;}
.shop{flex-direction: row;display: flex;width:100%;background: #fff;font-size:30rpx;margin-bottom:25rpx;box-shadow:1px 1px 1px 1px #e7e7e7;border-radius: 10rpx;padding-bottom:18rpx;}

.shop .l{width:100px;height:200rpx;background: #fef6e9;width:30%;}
.shop .l image{width:100%;height:200rpx;position: relative;top:-63rpx;z-index: 10;}
.shop .l image.flower{width:58px;height:29px;position: relative;left:-12%;top:5rpx;z-index: 11;}
.shop .r{width:100px;
width:70%;padding:15rpx;padding-left:40rpx;padding-top:5rpx;}
.shop .r .grey{width:100%;height:4px;background: #ebebeb;margin:3% 0;}
.shop .r .word{display: inline-block;margin:15rpx 0;}
.shop .r .dis{margin:5rpx 0;color:#696969;padding-bottom:10rpx;}
.shop .r .add_box{font-size:24rpx;}


/* 打烊提示 */
.model{background: #000;position: fixed;top:0;left:0;bottom:0;right:0;opacity: 0.3;z-index: 1000;width:100%;height:100%;}
 .closeTip{width:60%;margin:0 20%;position: absolute;left:0;z-index: 1001;border-radius: 20rpx;background: #A0A0A0;}
.hiddenScroll{
    overflow:hidden;
}
.closeTip image.front{width:100%;height:352rpx;border:10rpx;}
.closeTip .close{text-align: center;}
.closeTip .close image{width:46rpx;height:46rpx;border-radius: 50%;border:1px solid #fff;}
.box{height:100%;position: fixed;overflow: hidden;top:0;left:0;bottom:0;right:0;}