/* pages/shop/index.wxss */
page{background: #f8f8f8;}
.bg{width:100%;}
.bg image{width:100%;height:320rpx;margin-top:15rpx;}
.form{width:70%;margin:0 10%;padding:5%;font-size:28rpx;box-shadow: 0px 1px 1px 0px #d3a38c;padding-bottom:78rpx;border-radius: 10rpx;padding-top:10rpx;position: absolute;left:0;top:23%;z-index: 1000;background: #fff;}
.form image{width:48rpx;height:48rpx;margin-right:2%;}
.form input{display: inline-block;width:88.1%;}
.form view{border-bottom:1px solid #bcb6b2;margin:20rpx 0;padding:10rpx 0;}
.form view.btn{width:70%;margin:0 15%;background:#81c03e;position: absolute;left:0%;bottom:-11%;padding:25rpx 0;color:#fff;font-size:28rpx;text-align: center;border-radius: 12rpx;z-index: 1001;box-shadow: 0px 0px 0px 1px #f5f5f5;}



.model1{width:100%;position:absolute;top:0;bottom:0;left:0;right:0;background:#000;opacity:0.4;z-index: 1001;}
.shows{width: 100%;position: absolute;top:25%;z-index: 1002;color:#7be22a;font-size:28rpx;}
.show{width:600rpx;height: 250rpx;background: #fff;margin: 0px auto;border-radius: 8px;display: flex;text-align: center;color:#7be22a;display: none;line-height: 250rpx; padding-top:30px;box-shadow: 0px 2px 1px #777;}
.on{display: block;}
.show text{display:block;height:30px;line-height: 30px;color:#7be22a;}