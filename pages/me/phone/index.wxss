/* pages/me/phone/index.wxss */
page{background: #f0f0f0;}
.tips{padding:20rpx 30rpx;background:#7be22a;opacity: 0.3;border-top:2px solid #fff; font-size:28rpx;color:#F80000;display: flex;flex-direction: row; }
.tips image{width:60rpx;height:60rpx;margin-right:5%;}
.inputBox{font-size:28rpx;padding:0 30rpx;background: #fff;border-top:1px solid #e9e9e9;border-bottom:1px solid #e9e9e9;}
.inputBox input{width:70.9%;display: inline-block;padding:20rpx 0;overflow: visible;}
.inputBox .btn{display:inline-block;padding:20rpx 15rpx;background: #cccccc;color:#fff;border-radius: 8rpx;}
.inputBox .btnGreen{background:#7be22a;padding:20rpx 30rpx; }
.inputBox .btnGreen text{display: none;}
.noneBorder{border-top:none;}
.noneBorder input{width:100%;}
 .submitBtn{background: #bababa;padding:20rpx 0;margin:0 30rpx;color:#fff;font-size:32rpx;text-align: center;border-radius: 8rpx;margin-top:50rpx;}
 .green{background: #7be22a;}
