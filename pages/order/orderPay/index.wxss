/* pages/hotel/order_pay/index.wxss */
/*大容器*/
page{background-color: #F8F8F8;}
.all{
  width: 100%;
  height: 100%;
  font-family: 微软雅黑;
  background-color: #F8F8F8;}
/*居中*/
.center{
  margin: 0px auto;}  
/*主体部分*/
.main{
  width: 100%;}
/*主体第一块*/
.main1{
  width: 100%;
  height: 180rpx;
  position: relative;}
.main1 image{
  width: 100%;
  height: 100%;}
.main1 .block{
  position: absolute;
  width: 100%;
  height: 100%;
  font-weight: bolder;
  color: white;
  font-size: 70rpx;
  text-align: center;
  line-height: 180rpx;
  top: 0px;
  left: 0px;}
/*主体第二块*/
.main2{
  width: 100%;
  margin-top: 30rpx;
  background-color: white;
  box-shadow: 0rpx 1rpx 5rpx #CCCCCC;}
.main2 .left{
  width: 14%;
  display: inline-block;}
.main2 .left image{
  width: 35%;
  margin-left: 42%;
  margin-top: 22%;}   
.main2 .left1{
  width: 30%;
  display: inline-block;
  line-height: 80rpx;
  font-size: 32rpx;}
.main2 .right{
  width: 20%;
  float: right;
  line-height: 80rpx;}
/*主体第三块*/
.main3{
  width: 100%;}
.main3_1{
  width: 88%;
  font-size: 26rpx;
  color: #CCCCCC;}
.main3 .p{
  margin-top: 30rpx;
}
.main3 .p1{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
/*主体第四块*/
.main4{
  position: absolute;
  bottom: 0px;
  width: 100%;
  box-shadow: 0rpx -1rpx 6rpx #8B8B8B;
} 
.main4 button{
  line-height: 85rpx;
  color: white;
  border-radius: 0px;}   

.payment{
  background: #ddd;
  transition: all 0.3s ease-in-out;
}
.payment.active {
  /* background: #3399ff; */
   background: #7be22a; 
}
