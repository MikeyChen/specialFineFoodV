/* pages/order/index/index.wxss */
page{height:100%;}
/* 点部商家信息 */
.all{
  width: 100%;
  height: 100%;
}
.header{
  width: 96%;
  height: 186rpx;
  font-size:28rpx;
  padding:2%;
  background: #7be22a;
  color:#fff;
  border-top:4rpx solid #fff;
}
.header .img{float:left;width:25%; }
.header image{width:160rpx;height:160rpx;border-radius: 50%;position: relative;top:4rpx;border:2px solid #fff;}
.header .shop_info{width:70%;float:left;}
.header .shop_info .notice image{width:48rpx;height:48rpx;position: relative;top:-5rpx;}
.header .shop_info view{margin-top:15rpx}
.header .shop_info view.notice{width:100%;overflow: hidden; margin-rigth:20rpx;}
.header .shop_info .word{ white-space: nowrap;animation: animation  10s linear infinite;width:100%;padding:40px;position: relative;top:0;left:0;}
 @keyframes animation{
  from {
	left:0px;
}
to {
	left:-100%;
}
} 

/* pages/login/index.wxss */

.main{
  width: 100%;
  height: 800rpx;
}
.left{
  width: 30%;
  height: 100%;
  background: #fff;
  float: left;
  overflow-y: auto;
  font-size:28rpx;
  background:#fff;
}
.left .pub{background: #fff;text-align: center;padding:40rpx 0;border-bottom:1px solid #fff;color:#666666;}
.left .bgWhite{background:#f4f4f4;border-left:3px solid #7be22a;}
.right{
  width: 68%;
  height: 100%;
  float: left;
  font-size:28rpx;
  margin-left:2%;
}
.right .type{width:95%;padding:15rpx 2%;color:#636363;border-left:3px solid #7be22a;margin:15rpx 0;}
.right .box{margin-left:0rpx;color:#8d8d8d;}
.right .box .food image{width:100%;height:124rpx;}
.right .box .food{display: flex;align-items: center;position: relative;padding:20rpx 0;border-bottom:1px solid #e7e5e6;padding-bottom:22rpx;}
.right .box .food:first-child{border-top:1px solid #e7e5e6;}
.right .box .food .price{color:#ff4a48;margin-top:15rpx;font-size:32rpx;padding-bottom:15rpx;}
.right .box .food .img{width:36%;}
.right .box .food .info{width:56%;margin:0 2%;margin-right:4%}
.right .box .food .info .name{color:#2f2f2f;font-weight: bold;}
.right .box .food .info .ct{font-size:24rpx;margin-top:10rpx;}
.right .btn{position: absolute;right:2%;bottom:21rpx;}
.right .btn text{display: inline-block;} 
.right .btn text.reduce{width:60rpx;height:60rpx;border:1px solid #e4e4e4;border-radius: 50%;display:inline-flex;justify-content: center;align-items: center;}
.right .btn text.line{display: block;width:20rpx;height:4rpx;background: #afafaf;}
.right .btn text.add{width:60rpx;height:60rpx;border:1px solid #7be22a;border-radius: 50%;display:inline-flex;justify-content: center;align-items: center;color:#fff;background: #7be22a;}
.right .btn text.num{margin:0 15rpx;}


/* 显示详情 */
.model1{width:100%;position:absolute;top:0;bottom:0;left:0;right:0;background:#000;opacity:0.4;z-index: 4;}
.detail{display:none;position: absolute;z-index: 5;background: #fff;padding:30rpx 2%;margin:10%;width:76%;top:16%;font-size:28rpx;border-radius: 8rpx;}
.detail .img{text-align: center;}
.detail image{width:400rpx;height:400rpx;}
.appear{display: block;}
.detail .price{color:red;font-size:32rpx;border-bottom:1px solid #f5f5f5;padding-bottom:10rpx;margin:10rpx 0;}









/* 点击购物车的提示框 */
.cartTip{background: #fff;border:1px solid #dbdbdb;padding:20rpx;font-size:28rpx;position: fixed;bottom:84rpx;left:0;width:94.5%;display: none;z-index: 402;}
.cartTip view{padding:20rpx 0;position: relative;}
.cartTip view text.r{position: absolute;right:0;top:25%;}
.cartTip view text.price{right:33%;top:15%;}
.cartTip view.foodName{border-bottom:1px solid #dbdbdb;}
.cartTip .btn{position: absolute;right:0%;top:-26%;z-index: 450;}
.cartTip .btn text{display: inline-block;} 
.cartTip .btn text.reduce{width:60rpx;height:60rpx;border:1px solid #e4e4e4;border-radius: 50%;display:inline-flex;justify-content: center;align-items: center;}
.cartTip .btn text.line{display: block;width:20rpx;height:4rpx;background: #afafaf;}
.cartTip .btn text.add{width:60rpx;height:60rpx;border:1px solid #7be22a;border-radius: 50%;display:inline-flex;justify-content: center;align-items: center;color:#fff;background: #7be22a;}
.cartTip .btn text.num{margin:0 15rpx;}
.show{display: block}
/* 遮罩层 */
.shade{background: #000;position: fixed;top:0;left:0;opacity: 0.4;z-index: 400;display: none;}
.shadeShow{display: block;}




/* 添加购物车 */
.cart{width:100%;background: #888888;padding:25rpx 0;position: fixed;left:0;bottom:0;font-size:28rpx;z-index: 402;}
.cart view{display: inline-block;}
.cart .imgBox{position: absolute;top:-30rpx;left:3%;}
.cart .red{width:40rpx;height:40rpx;background: red;border-radius: 50%;color:#fff;display: flex;justify-content: center;text-align: center;position: absolute;top:-12rpx;left:60%;}
.cart view.l{color:#fff;margin-left:19%;}
/* //.cart button{background: none;line-height: 0;padding:25rpx 0rpx;} */
.cart button{color:#fff;position: absolute;right:0;top:0;width:230rpx;background: #7be22a;opacity: 0.3;border-radius: 0rpx;font-size:28rpx;line-height: 3.55555556;}
.cart image{width:74rpx; height:74rpx;}
.cart button.noOpcatity{opacity: 1;}